<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.masker.discover">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".global.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name=".home.HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/FullScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".photo.PhotoInfoActivity"
            android:launchMode="singleTop"
            />
        <activity
            android:name=".activity.LoginActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <data
                    android:host="oauth.callback"
                    android:scheme="discover" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".collection.CollectionDetailActivity"
            ></activity>

        <activity android:name=".search.SearchActivity"
            android:theme="@style/NormalTheme"
            ></activity>
        <activity android:name=".activity.PhotoDetailActivity"
            android:theme="@style/PhotoViewTheme"/>
        <activity android:name=".user.UserInfoActivity"/>
        <activity android:name=".activity.SettingActivity"/>
        <activity android:name=".downloads.DownloadsActivity"/>
    </application>

</manifest>